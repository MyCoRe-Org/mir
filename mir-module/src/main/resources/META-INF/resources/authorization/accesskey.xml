<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MyCoReWebPage>
<MyCoReWebPage title="{i18n}">
  <section i18n="mir.accesskey.manage" xml:lang="all">
    <script type="text/javascript" src="mir/../../js/mir/accesskeys.js" />
    <div id="mainError" class="alert alert-warning" style="display: none;">
      <h1>Access not granted!</h1>
      <p>You do not have the privilege to acces this page.</p>
    </div>
    <div id="manageAccessKeys" class="container-fluid">
      <div class="row pb-2">
        <div class="col-auto mr-auto">
          <h2>
            <i18n key="mir.accesskey.manage" />
          </h2>
        </div>
        <div class="col-auto">
          <button type="button" class="btn btn-primary float-right newAccessKeyModal" data-toggle="modal" data-target="#accessKeyModal">
            <i class="fa fa-plus"></i>
          </button>
        </div>
      </div>
      <table id="accessKeys" class="table">
        <thead>
          <tr class="d-flex">
            <th class="th col-auto">#</th>
            <th class="th col-3 text-center">
              <i18n key="mir.accesskey.type" />
            </th>
            <th class="th col text-center">
              <i18n key="mir.accesskey.value" />
            </th>
            <th class="th col-auto"></th>
          </tr>
        </thead>
      </table>
      <button type="button" id="back" class="btn btn-secondary closeModal" data-dismiss="modal">
        <i18n key="button.back" />
      </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="accessKeyModal" tabindex="-1" aria-labelledby="accessKeyModal" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">
              <i18n key="mir.accesskey" />
            </h5>
            <button type="button" class="close closeModal" data-dismiss="modal" aria-label="Close" />
          </div>
          <div class="modal-body">
            <div class="container-fluid">
              <div id="accessKeyModalAlert" class="alert alert-danger" style="display: none;" role="alert">
                This is a danger alertâ€”check it out!
              </div>
              <div class="row">
                <div class="col-auto">
                  <select id="accessKeyType" class="form-control">
                    <option>read</option>
                    <option>writedb</option>
                  </select>
                </div>
                <div class="col">
                  <div class="input-group">
                    <span class="input-group-prepend">
                      <button aria-label="Generate" class="btn btn-secondary" id="accessKeyGenerator" title="Generate" type="button">
                        <span aria-hidden="true" class="fas fa-cogs"></span>
                        <span class="sr-only">
                          <i18n key="mir.accesskey.generate" />
                        </span>
                      </button>
                    </span>
                    <input id="accessKeyValue" type="text" class="form-control" placeholder="Value" />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div class="container-fluid">
              <div class="row">
                <div class="col">
                  <button id="accessKeyDelete" type="button" class="btn btn-danger">
                    <i18n key="mir.accesskey.delete" />
                  </button>
                </div>
                <div class="col-auto">
                  <button type="button" class="btn btn-secondary closeModal" data-dismiss="modal">
                    <i18n key="button.cancel" />
                  </button>
                  <button id="accessKeyUpdate" type="button" class="btn btn-primary">
                    Update
                  </button>
                  <button id="accessKeyNew" type="button" class="btn btn-primary">
                    <i18n key="mir.accesskey.add" />
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MyCoReWebPage>
