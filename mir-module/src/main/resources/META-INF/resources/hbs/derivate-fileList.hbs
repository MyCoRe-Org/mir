{{#each children}}
    <div class="col-xs-12">
        {{#is ../mainDoc name}}
            <div class="file_set active_file">
        {{else}}
            <div class="file_set file">
        {{/is}}
        {{#isOr ../permWrite ../permDelete}}
            {{#unless ../urn}}
                <div class="options pull-right">
                    <div class="btn-group">
                        <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-cog"></i>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            {{#if ../permWrite}}
                                {{#isNot type "directory"}}
                                    <li>
                                        <a title="{{getI18n "IFS.mainFile"}}"
                                           href="{{../serverBaseURL}}servlets/MCRDerivateServlet?derivateid={{../mycorederivate}}&amp;objectid={{../mycoreobject}}&amp;todo=ssetfile&amp;file={{name}}"
                                           class="option" >
                                            <span class="glyphicon glyphicon-star"></span>
                                            {{getI18n "IFS.mainFile"}}
                                        </a>
                                    </li>
                                {{/isNot}}
                            {{/if}}
                            {{#if ../permDelete}}
                                <li>
                                    <a href="{{../serverBaseURL}}servlets/MCRDerivateServlet?derivateid={{../mycorederivate}}&amp;objectid={{../mycoreobject}}&amp;todo=sdelfile&amp;file={{name}}"
                                       class="option confirm_deletion" data-text="{{getI18n (concat "mir.confirm." type ".text")}}" title="{{getI18n (concat "IFS." type "Delete")}}">
                                        <span class="glyphicon glyphicon-trash"></span>
                                        {{getI18n (concat "IFS." type "Delete")}}
                                    </a>
                                </li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            {{/unless}}
        {{/isOr}}
        <span class="file_size">
            [{{formatFileSize size}}]
        </span>
        {{#is ../mainDoc name}}
            <span class="active_file glyphicon glyphicon-star" />
        {{else}}
            <span class="file glyphicon glyphicon-star" />
        {{/is}}
        <span class="file_date">
         {{formatDate time.modified}}
        </span>
        <span class="file_preview">
            {{#contains name ".pdf"}}
                <img src="{{../serverBaseURL}}images/icons/icon_common_disabled.png" alt="" data-toggle="tooltip"
                        data-placement="top" data-html="true" data-title='&lt;img src="{{../serverBaseURL}}img/pdfthumb/{{../mycorederivate}}{{path}}?centerThumb=no"&gt;' />
            {{else}}
                {{#is type "directory"}}
                    <span class="glyphicon glyphicon-folder-close derivate_folder_icon"></span>
                {{else}}
                    <img src="{{../serverBaseURL}}images/icons/icon_common_disabled.png" alt="" />
                {{/is}}
            {{/contains}}
        </span>
            {{#isNot type "directory"}}
                {{#endsWith name "mp4"}}
                    <span class="file_name_video">
                        <a data-deriid="{{../mycorederivate}}" data-name="{{name}}" href="{{href}}">
                            {{name}}
                        </a>
                    </span>
                {{else}}
                    <span class="file_name">
                        <a href="{{href}}">
                            {{name}}
                        </a>
                    </span>
                {{/endsWith}}
            {{else}}
                <span class="file_name derivate_folder" data-path="{{path}}">
                    {{name}}
                </span>
            {{/isNot}}
        </div>
    </div>
{{/each}}
{{#if pagination}}
  <div class="file_box_pagination">
    <div class="col-md-6 hidden-xs pagination-info">
        {{pagination/start}} {{getI18n "mir.files.to"}} {{pagination/end}} {{getI18n "mir.files.of"}} {{pagination/total}} {{getI18n "mir.files.text"}}
    </div>
    <div class="col-xs-12 col-md-6">
      <ul class="pagination pagination-sm pull-right">
        {{#paginate pagination type="first"}}
          <li {{#if disabled}}class="disabled"{{/if}}>
            <a href="#" data-page="{{n}}" aria-label="First">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
        {{/paginate}}
        {{#paginate pagination type="previous"}}
          <li {{#if disabled}}class="disabled"{{/if}}>
            <a href="#" data-page="{{n}}" aria-label="Previous">
              <span aria-hidden="true">&lsaquo;</span>
            </a>
          </li>
        {{/paginate}}
        {{#paginate pagination type="middle" limit="5"}}
          <li {{#if active}}class="active"{{/if}}><a href="#" data-page="{{n}}">{{n}}</a></li>
        {{/paginate}}
        {{#paginate pagination type="next"}}
          <li {{#if disabled}}class="disabled"{{/if}}>
            <a href="#" data-page="{{n}}" aria-label="Next">
              <span aria-hidden="true">&rsaquo;</span>
            </a>
          </li>
        {{/paginate}}
        {{#paginate pagination type="last"}}
          <li {{#if disabled}}class="disabled"{{/if}}>
            <a href="#" data-page="{{n}}" aria-label="Last">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        {{/paginate}}
      </ul>
    </div>
  </div>
{{/if}}