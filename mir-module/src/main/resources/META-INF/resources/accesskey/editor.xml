<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MyCoReWebPage>
<MyCoReWebPage title="{i18n}">
  <section i18n="mir.accesskey.manage" xml:lang="all">
    <div class="container-fluid">
      <div class="row pb-2">
        <div class="col-auto mr-auto">
          <h2>
            <a id="back-btn">
              <i class="fas fa-chevron-left fa-xs"></i>
            </a>
            <i18n key="mir.accesskey.manage" />
          </h2>
        </div>
        <div class="col-auto">
          <button type="button" class="btn btn-primary float-right" id="new-btn" href="#key-modal" data-toggle="modal" data-mode="new" style="display:none">
            <i class="fa fa-plus" />
          </button>
        </div>
      </div>
      <div id="error-alert-div" class="alert alert-warning" style="display: none;">
        <h1>
          <i18n key="mir.accesskey.headline.401" />
        </h1>
        <p>
          <i18n key="mir.accesskey.error.main" />
        </p>
      </div>
      <div id="success-alert-div" class="alert alert-success text-center" style="display: none;" />
      <div id="add-alert-div" class="alert alert-success text-center" style="display: none;">
        <i18n key="mir.accesskey.add.success.0" />
        <span id="add-alert-id" />
        <i18n key="mir.accesskey.add.success.1" /><br/>
        <i18n key="mir.accesskey.add.success.2" />
        <span id="add-alert-type" />
        <i18n key="mir.accesskey.add.success.3" />
        <a href="#" data-placement="bottom" data-toogle="tooltip" title="Copy" id="add-alert-value" />
        <i18n key="mir.accesskey.add.success.4" />
      </div>
      <table id="key-table" class="table table-striped" style="display:none">
        <thead>
          <tr class="d-flex text-center">
            <th class="th col-1">ID</th>
            <th class="th col-2">
              <i18n key="mir.accesskey.type" />
            </th>
            <th class="th col-8">
              <i18n key="mir.accesskey.comment" />
            </th>
            <th class="th col-1" />
          </tr>
        </thead>
        <tbody>
          <tr class="d-flex text-center">
            <td class="th-sm col-1" style="text-overflow: ellipsis; overflow: hidden; width: 20px; white-space: nowrap;"></td>
            <td class="th-sm col-2" style="text-overflow: ellipsis; overflow: hidden; width: 20px; white-space: nowrap;"></td>
            <td class="th-sm col-8" style="text-overflow: ellipsis; overflow: hidden; width: 20px; white-space: nowrap;"></td>
            <td class="th-sm col-1 text-right">
              <a class="edit-btn" href="#key-modal" data-toggle="modal">
                <i class="fas fa-edit"></i>
              </a>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <div id="spinner" class="spinner-border" role="status" style="margin-top:200px">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      <div id="paginator-div" style="display:none">
        <hr class="my-4" />
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            <li class="page-item" id="pre">
              <a class="page-link" href="#" tabindex="-1">
                <i class="fas fa-chevron-left"></i>
              </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">6</a></li>
            <li class="page-item"><a class="page-link" href="#">7</a></li>
            <li class="page-item"><a class="page-link" href="#">8</a></li>
            <li class="page-item"><a class="page-link" href="#">9</a></li>
            <li class="page-item" id="next">
              <a class="page-link" href="#">
                <i class="fas fa-chevron-right"></i>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="key-modal" tabindex="-1" aria-labelledby="key-modal" aria-hidden="true"> 
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">
              <i18n key="mir.accesskey.edit" />
            </h5>
            <button type="button" class="close modal-close-btn" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&#215;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="container-fluid">
              <div id="modal-alert-div" class="alert alert-danger" style="display: none;" role="alert">
                This is a danger alertâ€”check it out!
              </div>
              <div class="form-row">
                <div id="id-div" class="col form-group">
                  <label for="type-input">
                    ID
                  </label>
                  <input id="id-input" type="text" class="form-control" readonly="readonly" />
                </div>
              </div>
              <div class="form-row">
                <div class="col form-group">
                  <label for="type-input">
                    <i18n key="mir.accesskey.type" />
                  </label>
                  <a tabindex="0" class="pl-1" id="type-popover" role="button" data-toggle="popover" data-trigger="focus" title="Information">
                    <i class="fas fa-info-circle" />
                  </a>
                  <select id="type-input" class="form-control">
                    <option value="read">
                      <i18n key="mir.accesskey.type.read" />
                    </option>
                    <option value="writedb">
                      <i18n key="mir.accesskey.type.writedb" />
                    </option>
                  </select>
                </div>
              </div>
              <div class="row" id="value-div">
                <div class="col form-group">
                  <label for="value-input">
                    <i18n key="mir.accesskey.value" />
                  </label>
                  <a tabindex="0" class="pl-1" id="value-popover" role="button" data-toggle="popover" data-trigger="focus" title="Information">
                    <i class="fas fa-info-circle" />
                  </a>
                  <div class="input-group">
                    <span class="input-group-prepend">
                      <button aria-label="Generate" class="btn btn-secondary" id="value-gen-btn" title="Generate" type="button">
                        <span aria-hidden="true" class="fas fa-random"></span>
                        <span class="sr-only">
                          <i18n key="mir.accesskey.generate" />
                        </span>
                      </button>
                    </span>
                    <input id="value-input" type="text" class="form-control" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col form-group">
                  <label for="comment">
                    <i18n key="mir.accesskey.comment" />
                  </label>
                  <textarea class="form-control" id="comment-textarea" rows="3" />
                </div>
              </div>
              <div id="meta-div">
                <div class="form-row">
                  <div class="col-6 form-group">
                    <label for="creator-input">
                      <i18n key="mir.accesskey.creator" />
                    </label>
                    <input class="form-control" id="creator-input" />
                  </div>
                  <div class="col-6 form-group">
                    <label for="creation-input">
                      <i18n key="mir.accesskey.creation" />
                    </label>
                    <input class="form-control" id="creation-input" />
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-6 form-group">
                    <label for="last-changer-input">
                      <i18n key="mir.accesskey.lastChanger" />
                    </label>
                    <input class="form-control" id="last-changer-input" />
                  </div>
                  <div class="col-6 form-group">
                    <label for="last-change-input">
                      <i18n key="mir.accesskey.lastChange" />
                    </label>
                    <input class="form-control" id="last-change-input" />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div class="container-fluid">
              <div class="row">
                <div class="col">
                  <button id="delete-btn" type="button" class="btn btn-danger">
                    <i class="fas fa-trash" />
                    <i18n key="mir.accesskey.delete" />
                  </button>
                </div>
                <div class="col-auto">
                  <button id="update-btn" type="button" class="btn btn-primary">
                    <i class="fas fa-save" />
                    Update
                  </button>
                  <button id="add-btn" type="button" class="btn btn-primary">
                    <i class="fas fa-save" />
                    <i18n key="mir.accesskey.add" />
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="mir/../../js/mir/accesskey-utils.min.js" />
    <script type="text/javascript" src="mir/../../js/mir/accesskey-editor.min.js" />
    <script type="text/javascript">
      const url = getParameterByName("url");
      $("#back-btn").click(function() {
        if (url === undefined) {
          const objectId = getParameterByName("objId");
          if (objectId !== undefined) {
            window.location = webApplicationBaseURL + "receive/" + objectId;
          } else {
            window.location = webApplicationBaseURL;
          }
        } else {
          window.location = url;
        }     
      }); 
    </script>
  </section>
</MyCoReWebPage>
