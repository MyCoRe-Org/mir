<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE MyCoReWebPage>

<MyCoReWebPage>

  <section title="Dateien oder Verzeichnisse hochladen" xml:lang="de" />
  <section title="Upload of files or directories" xml:lang="en" />

  <section xml:lang="all">
  
    <h1> Uploadseite für </h1>
    <div class="result_body row">
      <div class="result_list col-md-8">
        <div id="hit_list">
          <h1><i class="fa fa-spinner fa-pulse"></i></h1>
        </div>
      </div>
    </div>
    <script>
    
      function getEntry() {
        uploadId = $( "input[name='parentObjectID']" ).val();
        $.ajax({
          method: "GET",
          url: webApplicationBaseURL+"servlets/solr/select?q=id%3A"+uploadId+"&amp;wt=xml&amp;XSL.Transformer=response-resultlist&amp;facet.field=mods.type&amp;group.limit=10&amp;facet.mincount=1&amp;group.ngroups=true&amp;facet=true&amp;group.field=returnId&amp;group=true",
          dataType: "html"
        }) .done(function( html ) {
          if (html.trim() != ""){
            $('#hit_list').html(html);
          } else {
            setTimeout(getEntry() , 2000);
          }
        });
      }
      
      $(document).ready( function() {
        getEntry()
      });
      
    </script>
    
    <div id="fileUpload" role="tabpanel">

      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active" id="tabModern">
          <a href="#modern" aria-controls="modern" role="tab" data-toggle="tab">Moderner Dateiupload</a>
        </li>
        <li role="presentation" id="tabClassic">
          <a href="#classic" aria-controls="classic" role="tab" data-toggle="tab">Klassischer Dateiupload</a>
        </li>
      </ul>
      
      <div class="tab-content">
      
        <div role="tabpanel" class="tab-pane fade in active" id="modern">
          <fileupload2/>
        </div>
        
        <div role="tabpanel" class="tab-pane fade" id="classic">
          <form class="form-horizontal" action="servlets/MCRUploadViaFormServlet" method="post" enctype="multipart/form-data">
    
            <filetarget/>
            <fieldset>
              <legend class="mir-fieldset-legend">
                <i18n key="fileupload.titel"/>
              </legend>  
              <div class="mir-fieldset-content">
                <div class="form-group">
                  <div class="col-md-3 control-label" />
                  <div class="col-md-6"> 
                    <div class="input-group">
                      <span class="input-group-btn">
                        <span class="btn btn-primary btn-file">
                          <i18n key="fileupload.browse"/>
                          <input name="filename[]" multiple="" type="file"/>
                        </span>
                      </span>
                      <input class="form-control" readonly="" type="text"/>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <a class="btn btn-default info-button" data-content="Bitte wählen sie die über den Durchsuchen Button die hochzuladenen Dateien aus. Es können auch mehre Dateien mir einmal ausgewählt werden." data-placement="right" data-toggle="popover" role="button" tabindex="0">
                      <i class="fa fa-info"></i>
                    </a>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-3 control-label" />
                  <div class="col-md-6"> 
                    <div class="input-group">
                      <span class="input-group-btn">
                        <span class="btn btn-primary btn-file">
                          <i18n key="fileupload.browse"/>
                          <input name="filename[]" multiple="" type="file"/>
                        </span>
                      </span>
                      <input class="form-control" readonly="" type="text"/>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-3 control-label" />
                  <div class="col-md-6"> 
                    <div class="input-group">
                      <span class="input-group-btn">
                        <span class="btn btn-primary btn-file">
                          <i18n key="fileupload.browse"/>
                          <input name="filename[]" multiple="" type="file"/>
                        </span>
                      </span>
                      <input class="form-control" readonly="" type="text"/>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
          
            <div class="col-md-6 col-md-offset-3">
              <p class="text-warning">
                <i18n key="fileupload.warning" />
              </p>
            </div>
      
            <div class="col-md-offset-2 col-md-6">
              <button class="btn btn-default">
                Abbrechen
              </button>
              <button type="submit" class="btn btn-primary">
                Hochladen
              </button>
            </div>
            <script>
               $(document).on('change', '.btn-file :file', function () {
                  var input = $(this), numFiles = input.get(0).files ? input.get(0).files.length : 1, label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
                  input.trigger('fileselect', [
                    numFiles,
                     label
                  ]);        
                });
                $(document).ready(function () {
                  $('.btn-file :file').on('fileselect', function (event, numFiles, label) {
                    var input = $(this).parents('.input-group').find(':text'), log = numFiles > 1 ? numFiles + ' files selected' : label;
                    if (input.length) {
                      input.val(log);
                    } 
                  });
                });
                //# sourceURL=pen.js
            </script>
      
          </form>
        </div>
      </div>
    </div>
    <script>
        $(document).ready(function(){
          $('[data-toggle="popover"]').popover();
        });
    </script>
  </section>
</MyCoReWebPage>
