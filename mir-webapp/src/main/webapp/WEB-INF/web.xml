<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>MIR</display-name>
  <absolute-ordering>
    <name>mir-default-layout</name>
	<name>mir-flatmir-layout</name>
    <name>mir-module</name>
    <name>mycore</name>
    <others/>
  </absolute-ordering>

<!-- Workaround for current mycore version -->
<servlet id="ActionMapping">
      <servlet-name>ActionMapping</servlet-name>
      <servlet-class>org.mycore.wfc.actionmapping.MCRActionMappingServlet</servlet-class>
</servlet>
<servlet-mapping>
   <servlet-name>ActionMapping</servlet-name>
   <url-pattern>/servlets/MCRActionMappingServlet/*</url-pattern>
</servlet-mapping>
<!-- to be removed -->
</web-app>