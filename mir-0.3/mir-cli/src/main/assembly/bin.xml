    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/bin</directory>
      <directoryMode>0775</directoryMode>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0644</fileMode>
      <lineEnding>dos</lineEnding>
      <includes>
        <include>*.bat</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>